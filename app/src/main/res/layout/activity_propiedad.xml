<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".DetallePropiedadActivity">

    <android.support.v7.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayoutPropiedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/imagen_instituto" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/servicios"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/itemDireccion"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/introColor"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/propiedad" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>